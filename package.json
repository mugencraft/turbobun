{
  "name": "@turbobun/monorepo",
  "private": true,
  "description": "Example of Turborepo setup with Bun, Biome/OXC and commitizen stuff.",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "turbo run build --filter='!./apps/website/**'",
    "check": "bun format-and-lint && bun check:case && bun check:knip",
    "check:case": "bunx --bun case-police",
    "check:knip": "bunx --bun knip",
    "clean": "git clean -xdf .turbo node_modules",
    "commit": "git cz",
    "dev": "bun --filter '*' dev",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "test": "turbo run test:ci",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@changesets/cli": "2.27.8",
    "@commitlint/config-conventional": "19.5.0",
    "@types/bun": "1.1.10",
    "commitizen": "4.3.0",
    "cz-git": "1.9.4",
    "lefthook": "1.7.16",
    "turbo": "2.1.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "bun@1.1.28"
}
