{
  "name": "@turbobun/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Example of Turborepo setup with Bun, Biome/OXC and commitizen stuff.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter='!./apps/website/**'",
    "check": "biome check .",
    "check:case": "bunx case-police .",
    "check:fix": "biome check --write .",
    "check:knip": "bunx --bun knip",
    "check:markdown": "bunx markdownlint '**/*.{md,mdx}' --ignore '**/node_modules/**'",
    "check:packages": "bunx sort-package-json *package.json  --check",
    "check:packages:fix": "bunx sort-package-json *package.json",
    "clean": "git clean -xdf .turbo node_modules",
    "commit": "git cz",
    "dev": "bun --filter '*' dev",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "turbo run lint",
    "lint:biome": "biome lint .",
    "lint:fix": "biome lint --write .",
    "test": "turbo run test:ci",
    "typecheck": "turbo run typecheck",
    "typecheck:tsc": "bunx --bun tsc"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.1",
    "@changesets/cli": "^2.27.8",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/bun": "^1.1.9",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.4",
    "lefthook": "^1.7.15",
    "turbo": "^2.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "packageManager": "bun@1.1.27"
}
